<%= div_for comment do %>
    <div class="comments-wrapper clearfix">
      <div class="pull-left">
        <p class="lead"><%= comment.body %></p>
        <p><small>Submitted <strong><%= time_ago_in_words comment.created_at %> ago
                            </strong>, by <%= comment.user.name %></small></p>
      </div>

      <div class="btn-group pull-right">
        <% if comment.user == current_user %>
            <%= link_to 'Delete Comment', link_comment_path(comment,@link), method: :delete, data: {confirm: 'Are You Sure?'},
            class: 'btn btn-xs btn-default' %>
        <% end %>
      </div>
    </div>
<% end %>